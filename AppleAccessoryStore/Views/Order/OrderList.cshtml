
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
@model IEnumerable<BusinessObject.TblOrder>
<h1>OrderList</h1>


<div class="container">
    <div class="row">
        <div class="span12">
            <ul class="breadcrumb">
                <li><a asp-controller="Product" asp-action="Index">Home</a> <span class="divider">/</span></li>
                <li class="active">Order History</li>
            </ul>
            <div class="row">
                <div class="span12">
                 
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th><span>Created</span></th>
                                <th>Order ID</th>
                                <th><span> Total Price</span></th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null)
                            {
                                <h2>@ViewBag.Message</h2>
                            }
                            else
                            {   if (Model.Count() > 0) { 
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td>@item.OrderDate</td>

                                            <td>@item.OrderId</td>

                                            <td>
                                                @item.Total
                                            </td>
                                            <td>
                                                <a asp-controller="Order" asp-route-Id="@item.OrderId" asp-action="Details" class="btn btn-info">Detail</a>
                                                <a href="order_details.html" class="table-link text-info" title="More Detail">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </td>

                                        </tr>

                                    }

                                    }
                                    else
                                    {
                                        <h2>Currently no order here</h2>
                                    }
                            }
                 </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>


