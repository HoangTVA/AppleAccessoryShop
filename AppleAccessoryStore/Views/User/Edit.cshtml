@model BusinessObject.TblUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
    <ul class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home">Home</a> <span class="divider">/</span></li>
        <li class="active">Edit Profile</li>
    </ul>
    <h3>EDIT PROFILE</h3>
    <hr class="soft" />

     <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display: none">
                    <label asp-for="UserId" type="hidden" class="control-label" hidden="hidden"></label>
                    <input asp-for="UserId" type="hidden" class="form-control" hidden="hidden" />
                    <span asp-validation-for="UserId" type="hidden" class="text-danger" hidden="hidden"></span>
                </div>
                <div class="control-group">
                    <label class="control-label" for="input01">Email</label>
                    <div class="controls">
                        <input asp-for="UserEmail" class="input-xlarge" id="input01" />

                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="input02">Password</label>
                    <div class="controls">
                        <input asp-for="UserPassword" class="input-xlarge" id="input02" />

                    </div>
                </div>
                <div class="form-group" style="display: none">
                    <label asp-for="RoleId" type="hidden" class="control-label" hidden="hidden"></label>
                    <input asp-for="RoleId" type="hidden" class="form-control" hidden="hidden" />
                    <span asp-validation-for="RoleId" type="hidden" class="text-danger" hidden="hidden"></span>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <input role="button" type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
     </div>

     <div>
        <a asp-action="Profile" asp-route-userId="@Model.UserId">Back to Profile</a>
     </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
