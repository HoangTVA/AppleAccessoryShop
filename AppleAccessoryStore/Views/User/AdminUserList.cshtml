

@{
    ViewData["Title"] = "AdminUserList";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

@model IEnumerable<BusinessObject.TblUser>
<h1>UserList</h1>


<div class="container">
    <div class="row">
        <div class="span12">
            <ul class="breadcrumb">
                <li><a asp-controller="Product" asp-action="Index">Home</a> <span class="divider">/</span></li>
                <li class="active">User Manager</li>
            </ul>
            <div class="row">
                <div class="span12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th><span>User ID</span></th>
                                <th>User Email</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.UserId</td>

                                        <td>@item.UserEmail</td>
                                        <td>@item.Role.RoleName</td>
                                        <td>
                                            <ul style="list-style:none; display:inline;">
                                                <li class="">
                                                    <a asp-controller="Order" asp-action="getListById"
                                                       asp-route-postUID="@item.UserId" class="btn btn-info">OrderList</a>
                                                </li>
                                                <li class="">
                                                    <a onclick="return confirm('Are you sure?This user will be permanent ban')" asp-controller="User" asp-action="BanUser" asp-route-userID="@item.UserId" role="button" class="btn btn-danger">Ban this user</a>
                                                </li>
                                            </ul>
                                        </td>

                                    </tr>

                                }
                            }
                            else
                            {
                                <h2>Currently no user</h2>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            
        </div>
    </div>
</div>


