@{
    ViewData["Title"] = "Product List";
}

@model IEnumerable<BusinessObject.TblProduct>

<ul class="list-group shadow">
    <!-- list group item-->
    <li class="list-group-item">
        <!-- Custom content-->
        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
            @if (Model.Count() > 0)
            {
                @foreach (var pro in Model)
                {@if (pro.UnitInStock > 0)
                    {
                        <div class="media-body order-2 order-lg-1">
                            <h5 class="mt-0 font-weight-bold mb-2">@pro.ProductName</h5>
                            <p class="font-italic text-muted mb-0 small">128 GB ROM | 15.49 cm (6.1 inch) Display 12MP Rear Camera | 7MP Front Camera A12 Bionic Chip Processor</p>
                            <div class="d-flex align-items-center justify-content-between mt-1">
                                <h6 class="font-weight-bold my-2">@pro.ProductPrice VND</h6>
                                <ul class="list-inline small">
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                </ul>
                            </div>
                        </div><img src="~/image/@pro.ProductImage" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                        <a asp-controller="Product" asp-action="addCart" asp-route-id="@pro.ProductId" class="addProduct">Add order</a>
                    }
            }
            }
            else
            {
                <p>@ViewBag.Message</p>
            }
        </div> <!-- End -->
    </li> <!-- End -->
</ul>