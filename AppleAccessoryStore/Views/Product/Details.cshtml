@model BusinessObject.TblProduct
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{ string role = HttpContextAccessor.HttpContext.Session.GetString("Role"); }
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<ul class="breadcrumb">
    <li><a asp-action="Index">Home</a> <span class="divider">/</span></li>
    <li class="active">@Model.ProductName</li>
</ul>
<div class="row">
    <div id="gallery" class="span4">
        <a href="~/image/@Model.ProductImage" title="Earphone 123">
            <img src="~/image/@Model.ProductImage" style="width:100%" alt="@Model.ProductName" />
        </a>
    </div>
    <div class="span8">
        <h3>@Model.ProductName</h3>
        <hr class="soft" />
        <form class="form-horizontal qtyFrm">
            <div class="control-group">
                <label class="control-label"><span>@Model.ProductPrice VND</span></label>
                <div class="controls">
                    <input type="number" class="span1" placeholder="Qty." />
                    @if (role != null)
                    {
                        if (role.Trim().Equals("AD"))
                        {
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Html.ViewData.Model.ProductId">Edit</a>
                        }
                    }
                    <button asp-controller="Product" asp-action="addCart" asp-route-id="@Model.ProductId" type="submit" class="btn btn-large btn-primary pull-right"> Add to cart <i class=" icon-shopping-cart"></i></button>
                    <a asp-controller="Product" asp-action="Index">Back to list</a>
                </div>
            </div>
        </form>

        <hr class="soft" />
        <h4>@Model.UnitInStock items in stock</h4>
    </div>
    <br />
    <div class="span12">
        <h3>Comments</h3>
        <div class="" id="home">
            <form asp-action="AddComment" asp-route-productID="@Model.ProductId">
                <h4>Add Comment</h4>
                <input name="Comment" />
                <button type="submit">AddComment</button>
            </form>
        </div>

    </div>
</div>

